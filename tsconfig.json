{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"target": "es6",		
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
		},
		"typeRoots": [
			"node_modules/@types",
			"node_module/phaser/types"
		],
		"types": [
			"phaser"
		],

	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}